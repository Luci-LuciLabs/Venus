cmake_policy(VERSION 3.28)
set(CMAKE_SYSTEM_NAME Linux)
message(STATUS "Attempting to find Gcc/G++.")
find_program(GCC_C NAMES gcc REQUIRED)
find_program(GCC_CXX NAMES g++ REQUIRED)

if(GCC_C AND GCC_CXX)
set(CMAKE_C_COMPILER ${GCC_C} CACHE STRING "" FORCE)
set(CMAKE_CXX_COMPILER ${GCC_CXX} CACHE STRING "" FORCE)
message("Found Gcc/G++ successfully, now using Gcc/G++ compiler.")
endif()

set(CMAKE_SYSTEM_PROCESSOR "x86_64")
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -m64")
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -m64")

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)